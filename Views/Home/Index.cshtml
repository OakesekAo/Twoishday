@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <main>
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-6 mb-3">
                    <h1 class="display-4 mb-3">Twoishday</h1>
                    <p class="lead mb-4">Streamline your project management with Twoishday, the powerful and easy-to-use platform that helps your team stay organized and productive.</p>
                    <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login" role="button">Try Demo</a>
                </div>
                <div class="col-lg-6">
                    <img src="~/img/splash.jpg" class="img-fluid rounded" alt="Screenshot of BugTracker dashboard">
                </div>
            </div>
        </div>

        <div class="container py-5">
            <h2 class="text-center mb-5">Key Features</h2>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h3 class="card-title mb-3">Project Tracking</h3>
                            <pclass ="card-text">
                                Track all of your project's issues and bugs in one place, with easy-to-use tools for creating, assigning, and prioritizing tasks.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h3 class="card-title mb-3">Collaboration</h3>
                            <p class="card-text">Invite team members and collaborate in real-time, with powerful tools for commenting, sharing files, and more.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <h3 class="card-title mb-3">Reporting</h3>
                            <p class="card-text">Get real-time insights into your team's performance and progress, with customizable reporting and analytics tools.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
